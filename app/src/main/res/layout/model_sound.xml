<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#f9f6ec"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        app:cardElevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/boland_goo"
                />

            <TextView
                android:layout_marginRight="10dp"
                android:textColor="#3e36cd"
                android:lines="1"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/image3"
                android:layout_toRightOf="@+id/button_bar"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:text="عنوان صوت"
                android:textSize="12dp"
                />

            <TextView
                android:layout_marginRight="10dp"
                android:textColor="#3e36cd"
                android:id="@+id/time"
                android:layout_below="@+id/title"
                android:lines="1"
                android:layout_width="wrap_content"
                android:minWidth="30dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/image3"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:text="10:31"
                android:textSize="8dp"
                />


            <TextView
                android:textColor="#3e36cd"
                android:id="@+id/date"
                 android:layout_below="@+id/title"
                android:lines="1"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/time"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:text="12 خردا 1398"
                android:textSize="8dp"
                />

            <LinearLayout
                android:id="@+id/button_bar"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/tag"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/fav"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/download"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>

        </RelativeLayout>





            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/header"
                android:id="@+id/sub_item"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_marginRight="10dp"
                        android:textColor="#3e36cd"
                        android:id="@+id/start2"

                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:minWidth="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:layout_marginLeft="10dp"
                        android:text="10:31"
                        android:textSize="8dp"
                        />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#3e36cd"
                        android:id="@+id/finish2"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:minWidth="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:layout_marginLeft="10dp"
                        android:text="10:31"
                        android:textSize="8dp"
                        />
                <SeekBar
                    android:layout_toRightOf="@+id/start2"
                    android:progressBackgroundTint="@color/zxing_possible_result_points"
                    android:id="@+id/seekBar2"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/finish2"/>

                 </RelativeLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/seekBar"
                    android:layout_centerHorizontal="true"
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <ImageView
                        android:id="@+id/puasesound_model"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pouse"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        />

                </LinearLayout>

            </LinearLayout>




    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>