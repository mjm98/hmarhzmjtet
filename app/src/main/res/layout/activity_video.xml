<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.VideoActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fa4059"
        android:layout_alignParentBottom="true"
        />


    <RelativeLayout
        android:id="@+id/search_layout3"
        android:layout_marginTop="15dp"
        android:background="@drawable/frame_untouch"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/search"
            />

        <EditText
            android:id="@+id/edit_text"
            android:textColorHint="#f93f59"
            android:background="@android:color/transparent"
            android:textSize="14dp"
            android:hint="اینجا جستجو کن"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:lines="1"
            android:singleLine="true"
            android:layout_toRightOf="@+id/icon"
            />


    </RelativeLayout>

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/search_layout3"
   >
    <RelativeLayout
        android:background="#000"
        android:gravity="center"
        android:id="@+id/framevideo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp">
    <VideoView
        android:layout_above="@+id/controller"
        android:id="@+id/video2"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
        <include layout="@layout/mediacontroller"
            />
        <ImageButton
            android:background="#00ffffff"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/fullscreenbtn12"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layv"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/framevideo"
        android:layout_above="@+id/others">
        <LinearLayout
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2">
            <ImageView
                android:layout_weight="5"
                android:layout_margin="2dp"
                android:src="@drawable/download_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="5"
                android:src="@drawable/heart_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="5"
                android:src="@drawable/bookmark_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="9 خرداد 1398"
                    android:textColor="#facf08" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TextView
                    android:textColor="#2018ad"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:id="@+id/videoTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="عنوان ویدیو"
                    android:gravity="right"
                    android:textSize="19sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#2018ad"
            android:textSize="10sp"
            android:text="توضیحات ویدیو \n دراین جا باید توشیجان کاملی و کلی درباشسیشسییییشسیی نئزمئر \n یشسیسشی"
            android:id="@+id/videoDetail"/>


    </LinearLayout>
    <TextView

        android:layout_above="@+id/similarvideorecycler"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="#2018ad"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="سایر ویدیو ها"
        android:gravity="right"
        android:textSize="19sp"
        android:id="@+id/others"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/similarvideorecycler"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginHorizontal="20dp"
        />
</RelativeLayout>
    <android.support.design.widget.TabLayout
        android:transitionName="tr"
        android:background="@drawable/frame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:id="@+id/tab3"
        >




    </android.support.design.widget.TabLayout>

</RelativeLayout>