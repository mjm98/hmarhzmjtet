<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#fff"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mandh.ir.myapplication.activitys.HomeActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fa4059"
        android:layout_alignParentBottom="true"
        />


    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_marginTop="15dp"
        android:background="@drawable/frame_untouch"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/search"
            />

        <EditText
            android:id="@+id/edit_text"
            android:textColorHint="#f93f59"
            android:background="@android:color/transparent"
            android:textSize="14dp"
            android:hint="اینجا جستجو کن"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:lines="1"
            android:singleLine="true"
            android:layout_toRightOf="@+id/icon"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/search_layout"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:elevation="3dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/answer_frame_gray"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/grade_layout"
            >

            <ImageView
                android:layout_marginRight="8dp"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/arrow_down"
                android:id="@+id/grade_spinner_icon"
                />

            <Spinner

                android:gravity="right"
                android:textDirection="rtl"
                android:background="@android:color/transparent"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sort_spinner"
                />

        </LinearLayout>




        <TextView
            android:textColor="#3c34cc"
            android:id="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical|right"
            android:text="همه محتواهای صوتی"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />


    </RelativeLayout>


    <android.support.v7.widget.RecyclerView

        android:layout_marginTop="7dp"
        android:id="@+id/recyclerView"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab"
        android:clipToPadding="false"
        android:paddingBottom="10dp"
        >


    </android.support.v7.widget.RecyclerView>



    <android.support.design.widget.TabLayout
        android:transitionName="tr"
        android:background="@drawable/frame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:id="@+id/tab"
        >



    </android.support.design.widget.TabLayout>

</RelativeLayout>
