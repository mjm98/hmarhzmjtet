<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/similarmodellinear"
        android:background="#FFF8F5EB"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="110dp">


        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/war"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_above="@+id/videoTitle"
            android:id="@+id/videoImage"
            android:layout_width="65dp"
            android:layout_height="65dp" />




        <TextView
            android:textColor="#3e36cd"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="عنوان ویدیو"
            android:id="@+id/videoTitle"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:layout_marginBottom="2dp"
            android:lines="1"
            android:ellipsize="end"


            />


    </LinearLayout>



</android.support.v7.widget.CardView>
